{% extends 'main/layout.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
    <div class="container" style="text-align: center">

    <h1>Catalogue</h1>
    <div class="d-flex flex-wrap">
        {% for food in foods %}
            <div class="box-cat">
                <div>
                    <a href="{{ path('detail', {'id' : food.id}) }}" style="margin-right: 30px;margin-left: 30px">
                        <img src="{{ food.picture }}"></a>
                    <svg width="20" height="20">
                        <line x1="0" y1="10" x2="20" y2="10" style="stroke: #000000; stroke-width: 5;-webkit-border-radius: 15px;
border-radius: 15px;"></line>
                        <line x1="10" y1="0" x2="10" y2="20" style="stroke: #000000; stroke-width: 5;-webkit-border-radius: 30px;
border-radius: 30px;"></line>
                    </svg>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}