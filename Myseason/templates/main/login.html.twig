{% extends 'main/layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <h1>Connexion</h1>
<div class="container"></div>
    <form action="{{ path('login') }}" method="post">

              <label for="username">Identifiant </label>

            <input type="text" class="form-control" style="width: 25%" id="username" name="_username" placeholder="Votre identifiant" value="{{ last_username }}"/>

            <br>
            <label for="password">Mot de passe </label>
            <input type="password" class="form-control" style="width: 25%" id="password" name="_password" placeholder="Votre mot de passe"/>
            <br>
            <button type="submit" class="myButton">Valider</button>
    </form>

    <br>
    <hr>
    <div class="inline">
        <h3>Nouveau?</h3>
        <a href="{{ path('app_register') }}">
            <div class="myButton">Inscription</div>
        </a>
    </div>

{% endblock %}