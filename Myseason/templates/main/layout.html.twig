<body>
<div class="inside">

    {% include 'includes/nav.html.twig' %}
    <hr>
    {% block body %}
        <br>
        <br>
        <div class="container">


            <div class="box-main ">
                <h2>Les favoris du moment</h2>
                <div class="d-flex flex-wrap">
                    {% for food in foods %}
                        <span style="margin-left: auto;margin-right: auto">
                        <a href="{{ path('detail', {'id' : food.id}) }}">
                            <img src="{{ food.picture }}"></a>
                            </span>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endblock %}
</div>
</body>
